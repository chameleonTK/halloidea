<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="MyToolbarStyle" parent="Theme.AppCompat.DayNight">
        <item name="actionMenuTextColor">#30122d</item>
    </style>

    <style name="AppTheme.ActivityEdit" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#1857be</item>
        <item name="colorPrimaryDark">#151b57</item>
    </style>

    <style name="AppTheme.ActivityView" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#02a0a1</item>
        <item name="colorPrimary">#151b57</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:color">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#bbb</item>
        <item name="android:backgroundTint">#f8a971</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
